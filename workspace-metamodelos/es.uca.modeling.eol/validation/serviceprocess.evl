-- Diagram constraints --------------------------

context ServiceProcess {
  constraint ExactlyOneInitialNode {
    check : InitialNode.all.size() = 1
    message : 'There must be exactly one initial node'
  }

  constraint ExactlyOneGPC {
    check : GlobalPerformanceAnnotation.all.size() = 1
    message : 'There must be exactly one global performance constraint'
    fix {
      title : 'Create a default global performance constraint'
      do {
        self.globalPerformance := new GlobalPerformanceAnnotation;
      }
    }
  }
}
