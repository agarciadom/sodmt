<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="ServiceAnalyzer"
            id="es.uca.webservices.service-analyzer.emf.ui.commands.category">
      </category>
      <command
            name="Generate ServiceAnalyzer WSDL Catalog"
            categoryId="es.uca.webservices.service-analyzer.emf.ui.commands.category"
            id="es.uca.webservices.service-analyzer.emf.ui.commands.generateCatalog">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="es.uca.webservices.service-analyzer.emf.ui.commands.generateCatalog"
            class="es.uca.webservices.wsdl.emf.ui.handlers.GenerateMessageCatalogHandler">
         <enabledWhen>
            <reference
                  definitionId="es.uca.webservices.service-analyzer.emf.ui.oneOrMoreWSDLs">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="es.uca.webservices.service-analyzer.emf.ui.commands.generateCatalog"
               icon="icons/sample.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="es.uca.webservices.service-analyzer.emf.ui.oneOrMoreWSDLs">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="es.uca.webservices.service-analyzer.emf.ui.commands.generateCatalog"
               icon="icons/sample.gif"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="es.uca.webservices.service-analyzer.emf.ui.oneOrMoreWSDLs">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="es.uca.webservices.service-analyzer.emf.ui.oneOrMoreWSDLs">
         <and>
            <count
                  value="+">
            </count>
            <iterate>
               <adapt
                     type="org.eclipse.core.resources.IFile">
                  <test
                        property="org.eclipse.core.resources.extension"
                        value="wsdl">
                  </test>
               </adapt>
            </iterate>
         </and>
      </definition>
   </extension>

</plugin>
